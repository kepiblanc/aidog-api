{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "CommonJS",
    "declaration": true,
    "allowJs": true,
    "target": "es2022",
    "alwaysStrict": true,
    "baseUrl": "./src",
    "strict": true,
    "strictPropertyInitialization": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },

  "include": [
    "./src"
  ],

  "exclude": [
    "node_modules",
    "dist"
  ],

  "typeRoots": [
    "./node_modules/@types"
  ]
} 
